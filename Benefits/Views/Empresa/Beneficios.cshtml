@model IEnumerable<Domain.Beneficio>

@{
    ViewData["Title"] = "Beneficios";
}
<div class="m-2 container-fluid d-flex justify-content-center p-4 rounded bg-danger">
    <h2 class="text-white">Beneficios</h2>
</div>
<div class="d-flex justify-content-around m-3">
    <a class="btn btn-info" asp-controller="Empresa" asp-action="BeneficiosCreate">Novo Beneficio<span class="sr-only">(current)</span></a>
    <a class="btn btn-dark" asp-controller="Empresa" asp-action="Index">Início<span class="sr-only">(current)</span></a>
</div>
<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                Empresa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CriadoEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.Razao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CriadoEm)
                </td>
                <td class="d-flex justify-content-around">
                    <a asp-action="BeneficiosEdit" asp-route-id="@item.BeneficioId" class="btn btn-info">Editar</a>
                    <a asp-action="BeneficiosDetails" asp-route-id="@item.BeneficioId" class="btn btn-success">Detalhes</a>
                    <a asp-action="BeneficiosDelete" asp-route-id="@item.BeneficioId" class="btn btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
