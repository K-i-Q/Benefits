@model Domain.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row d-flex justify-content-center p-3">
<h2 class="text-black">Login</h2>
</div>
<div class="row d-flex justify-content-center p-4 bg-info rounded-circle">
    <div class="col-md-4">
        <legend>Login Usuário</legend>
        <form asp-action="Login" asp-controller="Usuario" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-white">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Acessar" class="btn btn-block btn-success" />
            </div>
            <div class="form-group">
                <a asp-action="Home" asp-controller="Home" value="Voltar" class="btn btn-block btn-warning">Voltar</a>
            </div>
        </form>
    </div>
</div>
