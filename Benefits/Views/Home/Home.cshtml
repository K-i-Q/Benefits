
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Home</h2>
<form action="/" method="get">
    <button type="submit" asp-action="Cadastrar" asp-controller="Empresa" class="btn btn-info">Cadastro Empresa</button>
    <button type="submit" asp-action="Cadastrar" asp-controller="Cliente" class="btn btn-success">Cadastro Cliente</button>
    <button type="submit" asp-action="LoginEmpresa" asp-controller="Login" class="btn btn-danger">Login Empresa</button>
    <button type="submit" asp-action="LoginCliente" asp-controller="Login" class="btn btn-warning">Login Cliente</button>
</form>